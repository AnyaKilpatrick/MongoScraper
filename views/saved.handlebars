{{!-- header --}}
<div class="parallax-container">
    <div class="parallax">
        <img src="assets/images/parallax1.jpg">
    </div>
    <div class="row">
        <div class="col s12 right-align">
            {{!-- link to go back to home page --}}
            <a id="goHomeBtn" class="waves-effect waves-light btn-large navBtns" href="/"><i class="material-icons">home</i></a>
        </div>
        <div class="col s12 center-align">
            <h1 id="title">MongoScraper</h1>
            <h4 id="title">travel</h4>
        </div>
    </div>
</div>
{{!-- main content (cards) --}}
<div class="row">
  {{#each articles}}
  <div class="col s12">
    <div class="card horizontal z-depth-5 articleCard">
      <div class="card-image hide-on-small-only">
        <img class="responsive-img cardsImg" src="{{imgLink}}">
      </div>
      <div class="card-stacked">
        <div class="card-content">
          <h5>{{title}}</h5>
          <p>{{summary}}</p>
        </div>
        <div class="card-action">
        {{!-- link to article --}}
          <a href="{{articleLink}}" target="_blank">Read Article</a>
        {{!--reveal notes--}}
          <a href="#" data-id="{{_id}}" class="activator">Add Notes</a>
        {{!-- delete notes--}}
          <a data-id="{{_id}}" class="waves-effect waves-light btn-flat right deleteArticle">Delete</a>
        </div>
      </div>
      {{!-- content that is reveled only when you click "add notes" button --}}
      <div class="card-reveal">
        <span class="card-title grey-text text-darken-4"><i class="material-icons right">X</i>Card Title</span>
         <div class="row">
            <form class="col s12">
                <div class="row">
                    <div id="noteHolder{{_id}}" class="col s12">
                        {{!-- holder for notes --}}
                    </div>
                    <div class="input-field col s12">
                        {{!-- input for creating a new note --}}
                        <input id="noteFor{{_id}}" class="note" type="text"><a data-id="{{_id}}" class="waves-effect waves-light btn-large addNote">Add</a>
                        <label for="note">Note</label>
                    </div>
                </div>
            </form>
        </div>
      </div>
    </div>
  </div>
  {{/each}}